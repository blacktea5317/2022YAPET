@model IEnumerable<YAPET.Models.Introduction>
@using PagedList
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Adm/Views/Shared/_Layout-Adm.cshtml";
    var p = Request.QueryString["page"];
}
<link href="//cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />


<h2 class="mt-4">平台消息管理</h2>

<p class="card-header text-right">
    @Html.ActionLink("新增平台消息", "Create", new { page = p }, new { @class = "btn btn-primary" })
</p>

<table class="table" id="IntroTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Content)
            </th>*@
            @*<th>
                @Html.DisplayNameFor(model => model.Date)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Adm.AdmId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@Url.Action("GetImage",new { id = item.IntroductionNo })" width="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Adm.AdmId)
                </td>
                <td>
                   @* @Html.ActionLink("Edit", "Edit", new { id = item.IntroductionNo }) |*@
                    @Html.ActionLink("詳細資料", "Details", new { id = item.IntroductionNo }, new { @class = "btn btn-outline-primary" }) 
                  @*  @Html.ActionLink("Delete", "Delete", new { id = item.IntroductionNo })*@
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts {
    <script src="//cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTable/Chinese traditional.js"></script>
    <script>
        $('pagination>li').addClass('page-item');
        $('pagination>li>a').addClass('page-link');

        let table = $('#IntroTable').DataTable(Tableconfig);

    </script>
}