@model YAPET.Models.Freeze

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Adm/Views/Shared/_Layout-Adm.cshtml";
    var p = Request.QueryString["page"];
}



<h3 class="text-danger mt-4 mb-4">確定要刪除凍結資料?</h3>
<div class="card border-info">
    <div class="card-header bg-info text-white"><h3>凍結詳細資料</h3></div>

    <dl class="card-body row">

        <dt class="col-3">
            @* @Html.DisplayNameFor(model => model.User.UserId)*@凍結會員
        </dt>

        <dd class="col-3">
            @Html.DisplayFor(model => model.User.UserId)
        </dd>

        <dt class="col-3">
            @Html.DisplayNameFor(model => model.StartDays)
        </dt>

        <dd class="col-3">
            @Html.DisplayFor(model => model.StartDays)
        </dd>

        <dt class="col-3">
            @Html.DisplayNameFor(model => model.EndDays)
        </dt>

        <dd class="col-3">
            @Html.DisplayFor(model => model.EndDays)
        </dd>

        <dt class="col-3">
            @Html.DisplayNameFor(model => model.Reason)
        </dt>

        <dd class="col-3">
            @Html.DisplayFor(model => model.Reason)
        </dd>

        <dt class="col-3">
            @Html.DisplayNameFor(model => model.State)
        </dt>

        <dd class="col-3">
            @Html.DisplayFor(model => model.State)
        </dd>

        <dt class="col-3">
            @*@Html.DisplayNameFor(model => model.Adm.AdmId)*@ 管理員帳號
        </dt>

        <dd class="col-3">
            @Html.DisplayFor(model => model.Adm.AdmId)
        </dd>



    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card-footer text-right">
            <input type="submit" value="刪除" class="btn btn-outline-danger btn-lg" />
            @Html.ActionLink("返回", "Index", new { page = p }, new { @class = "btn btn-outline-success btn-lg" })
        </div>
    }
</div>
