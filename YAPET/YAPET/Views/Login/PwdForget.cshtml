@model YAPET.Models.PwdForget

@{
    ViewBag.Title = "忘記密碼";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="py-5">
        <div class="container px-3">
            <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
                <div class="text-center mb-5">
                    <h1 class="fw-bolder">忘記密碼</h1>
                </div>
                <div class="col-md-6 offset-md-3">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group row">
                        @Html.LabelFor(model => model.EMail, htmlAttributes: new { @class = "control-labell col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.EMail, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.EMail, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="text-right">
                        <span class="text-danger">@ViewBag.MailErr</span>
                        <input type="submit" value="寄送驗證碼" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </section>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}